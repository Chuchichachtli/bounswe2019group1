<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android">

<data>

    <variable
        name="eventModel"
        type="com.project.khajit_app.data.models.EventModel" />
</data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2FFFFFF"
    android:fillViewport="true"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dog_detail_name_margin_top"
            android:layout_marginBottom="0dp"
            android:text="@{eventModel.title}" />


        <TextView
            android:id="@+id/description_country"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dog_detail_description_margin_left"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/dog_detail_description_margin_right"
            android:layout_marginBottom="@dimen/dog_detail_description_margin_bottom"
            android:autoLink="web"
            android:background="#81E4C9C8"
            android:text="@{eventModel.country}" />
        <TextView
            android:id="@+id/description_date"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dog_detail_description_margin_left"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/dog_detail_description_margin_right"
            android:layout_marginBottom="@dimen/dog_detail_description_margin_bottom"
            android:autoLink="web"
            android:background="#81E4C9C8"
            android:text="@{eventModel.date}" />
        <TextView
            android:id="@+id/description_impact"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dog_detail_description_margin_left"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/dog_detail_description_margin_right"
            android:layout_marginBottom="@dimen/dog_detail_description_margin_bottom"
            android:autoLink="web"
            android:background="#81E4C9C8"
            android:text="@{eventModel.impact}" />

        <TextView
            android:id="@+id/description_forecast"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dog_detail_description_margin_left"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/dog_detail_description_margin_right"
            android:layout_marginBottom="@dimen/dog_detail_description_margin_bottom"
            android:autoLink="web"
            android:background="#81E4C9C8"
            android:text="@{eventModel.forecast}" />
        <TextView
            android:id="@+id/description_previous"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dog_detail_description_margin_left"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/dog_detail_description_margin_right"
            android:layout_marginBottom="@dimen/dog_detail_description_margin_bottom"
            android:autoLink="web"
            android:background="#81E4C9C8"
            android:text="@{eventModel.previous}" />


    </LinearLayout>

</ScrollView>
</layout>