<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:paddingHorizontal="24dp"
    android:layout_marginHorizontal="24dp">

    <TextView
        android:id="@+id/buy_order_equipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="12dp"
        android:textStyle="bold"
        android:text="BUY ORDER: EUR"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/buy_order_equipment_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_horizontal"
        android:text="current: $2.34"
        android:textSize="12sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/equipment_buy_order_value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:hint="buy if falls below"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/equipment_buy_order_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:padding="18dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/dollar_symbol"
            app:layout_constraintStart_toEndOf="@+id/equipment_buy_order_value"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/equipment_buy_order_amount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:hint="enter amount to buy"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/equipment_buy_order_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:padding="18dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/dollar_symbol"
            app:layout_constraintStart_toEndOf="@+id/equipment_buy_order_amount"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/equipment_buy_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:text="BUY ORDER" />


</LinearLayout>