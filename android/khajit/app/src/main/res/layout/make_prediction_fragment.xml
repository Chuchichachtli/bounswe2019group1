<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:background="@android:color/white"
android:paddingHorizontal="24dp"
android:layout_marginHorizontal="24dp"
tools:context=".activity.ui.prediction.MakePredictionFragment">


<TextView
    android:id="@+id/make_prediction_fragment_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="16dp"
    android:gravity="center_horizontal"
    android:paddingHorizontal="12dp"
    android:textStyle="bold"
    android:text="BUY: EUR"
    android:textSize="24sp"/>


    <TextView
        android:id="@+id/make_prediction_fragment_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="12dp"
        android:textStyle="bold"
        android:text="VALUE: EUR"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/make_prediction_fragment_predict_increase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:text="INCREASE" />

    <Button
        android:id="@+id/make_prediction_fragment_predict_decline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:background="#A33539"
        android:text="DECLINE" />



</LinearLayout>